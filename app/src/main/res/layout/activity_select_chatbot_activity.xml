<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Home_background_color"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    tools:context=".home.selectChatBotActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:clipToPadding="false"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:contentPadding="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            card_view:cardCornerRadius="7dp"
            card_view:cardElevation="@dimen/home_card_elev"
            android:elevation="@dimen/home_card_elev"
            app:layout_constraintTop_toTopOf="parent"

            android:id="@+id/card_cbot0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:id="@+id/constraintsatya"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/satya_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/mukta_semibold"
                    android:text="@string/satya_chatbot"
                    android:textColor="@color/app_black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/cbot0_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:paddingRight="5dp"
                    android:fontFamily="@font/mukta_regular"
                    android:textColor="@color/app_light_black"
                    android:layout_marginBottom="10dp"
                    android:text="@string/cbot0_deatils"
                    app:layout_constraintBottom_toBottomOf="parent"


                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/satya_card_title"
                    app:layout_constraintVertical_bias="0.1" />

                <Button
                    android:id="@+id/cbot0"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chat_now"
                    android:textSize="15dp"
                    android:textColor="@color/app_blue"
                    android:fontFamily="@font/mukta_medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cbot0_details" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:contentPadding="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            card_view:cardCornerRadius="7dp"
            card_view:cardElevation="@dimen/home_card_elev"
            android:elevation="@dimen/home_card_elev"
            app:layout_constraintTop_toBottomOf="@id/card_cbot0"

            android:id="@+id/card_cbot1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:id="@+id/constraint"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/who_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/mukta_semibold"
                    android:text="@string/who_chatbot"
                    android:textColor="@color/app_black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/cbot1_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:paddingRight="5dp"
                    android:fontFamily="@font/mukta_regular"
                    android:textColor="@color/app_light_black"
                    android:layout_marginBottom="10dp"
                    android:text="@string/cbot1_deatils"
                    app:layout_constraintBottom_toBottomOf="parent"


                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/who_card_title"
                    app:layout_constraintVertical_bias="0.1" />

                <Button
                    android:id="@+id/cbot1"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chat_now"
                    android:textSize="15dp"
                    android:textColor="@color/app_blue"
                    android:fontFamily="@font/mukta_medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cbot1_details" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:contentPadding="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            card_view:cardCornerRadius="7dp"
            card_view:cardElevation="@dimen/home_card_elev"
            android:elevation="@dimen/home_card_elev"
            app:layout_constraintTop_toBottomOf="@id/card_cbot1"

            android:id="@+id/card_cbot2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:id="@+id/constraint2"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/gov_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/mukta_semibold"
                    android:text="@string/my_gov_helpdesk"
                    android:textColor="@color/app_black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/cbot2_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:paddingRight="5dp"
                    android:fontFamily="@font/mukta_regular"
                    android:textColor="@color/app_light_black"

                    android:text="@string/cbot2_deatils"

                    app:layout_constraintVertical_bias="0.1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/gov_card_title" />

                <Button
                    android:id="@+id/cbot2"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chat_now"
                    android:textSize="15dp"
                    android:textColor="@color/app_blue"
                    android:fontFamily="@font/mukta_medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cbot2_details" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:contentPadding="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            card_view:cardCornerRadius="7dp"
            card_view:cardElevation="@dimen/home_card_elev"
            android:elevation="@dimen/home_card_elev"
            app:layout_constraintTop_toBottomOf="@id/card_cbot2"

            android:id="@+id/card_cbot3">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:id="@+id/constraint3"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/delhi_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/mukta_semibold"
                    android:text="@string/delhi_gov_helpdesk"
                    android:textColor="@color/app_light_black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/cbot3_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/mukta_regular"
                    android:textColor="@color/app_light_black"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:paddingRight="5dp"

                    android:text="@string/cbot3_deatils"

                    app:layout_constraintVertical_bias="0.1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/delhi_card_title" />

                <Button
                    android:id="@+id/cbot3"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chat_now"
                    android:textSize="15dp"
                    android:textColor="@color/app_blue"
                    android:fontFamily="@font/mukta_medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cbot3_details" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>