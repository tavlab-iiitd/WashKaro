<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".daily_guidelines">


    <TextView
        android:id="@+id/centre_view_daily_updates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:text="GUIDELINES"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="30dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView_daily_updates"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_daily_updates"
        android:layout_width="match_parent"
        android:layout_below="@id/centre_view_daily_updates"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintHorizontal_bias="1.0"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent"-->
    <!--        app:layout_constraintVertical_bias="1.0" />-->


</RelativeLayout>